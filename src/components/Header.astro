---
import insta from "../images/insta.svg";
import { Image } from "@astrojs/image/components";
import logo from "../images/hot-pot.png";
import HeaderLink from "./HeaderLink.astro";
import Toggle from "./Toggle.astro";
---

<div
  role="navigation"
  aria-label="Main"
  class="flex justify-between items-center nav px-4 py-2 fixed top-0 w-full h-24 z-20 text-app-theme bg-app-header border-app-theme"
>
  <div
    class="absolute top-6 bg-app-header flex flex-col items-start justify-start flex-grow basis-0"
  >
    <Toggle>
      <button slot="trigger" class="relative">
        <svg fill="#d00000" viewBox="0 -25 100 80" width="40" height="40">
          <rect width="50" height="10"></rect>
          <rect y="20" width="50" height="10"></rect>
          <rect y="40" width="50" height="10"></rect>
        </svg>
      </button>
      <!-- The default slot is below -->
      <nav>
        <ul class="hidden toggle-content">
          <HeaderLink displayName="About" path="about" />
          <HeaderLink displayName="Recipes" path="recipes" />
          <HeaderLink displayName="Blog" path="blog" />
        </ul>
      </nav>
    </Toggle>
  </div>
  <div class="w-50"></div>
  <a href="/">
    <h1 class="text-2xl md:text-3xl text-app-black mt-1">MasamiCooks</h1>
  </a>

  <div>
    <a href="https://instagram.com/masamicooks">
      <img height="24" width="24" src={insta} />
    </a>
  </div>
</div>
