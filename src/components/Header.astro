---
import insta from "../images/insta.svg";
import { Image } from "@astrojs/image/components";
import logo from "../images/hot-pot.png";
import HeaderLink from "./HeaderLink.astro";
import Toggle from "./Toggle.astro";
---

<div
  role="navigation"
  aria-label="Main"
  class="flex justify-between items-center nav px-4 md:px-4 lg:px-6 py-2 lg:py-3 fixed top-0 w-full h-24 z-20 text-app-theme bg-app-header border-app-theme"
>
  <div
    class="absolute top-6 bg-app-header flex flex-col items-start justify-start flex-grow basis-0 md:top-0 md:flex-row md:relative md:items-center"
  >
    <Toggle>
      <button slot="trigger" class="relative md:hidden">
        <svg fill="#d00000" viewBox="0 -25 100 80" width="40" height="40">
          <rect width="50" height="10"></rect>
          <rect y="20" width="50" height="10"></rect>
          <rect y="40" width="50" height="10"></rect>
        </svg>
      </button>
      <!-- The default slot is below -->
      <nav>
        <ul class="hidden md:flex toggle-content">
          <HeaderLink displayName="About" path="about" />
          <HeaderLink displayName="Recipes" path="recipes" />
          <HeaderLink displayName="Blog" path="blog" />
        </ul>
      </nav>
    </Toggle>
  </div>
  <div class="flex justify-start items-center">
    <a href="/">
      <div class="h-8 w-8 lg:h-10 lg:w-10">
        <Image alt="" src={logo} />
      </div>
    </a>
  </div>
  <div class="flex justify-end flex-grow basis-0 items-center">
    <a href="https://instagram.com/masamicooks">
      <img height="24" width="24" src={insta} />
    </a>
  </div>
</div>
